name: acupuntura

on:
  push:
    branches: ["sala"]
  pull_request:
    branches: ["sala"]

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read
      attestations: write

    strategy:
      max-parallel: 4
      matrix:
        python-version: [3.11]

    services:
      postgres:
        image: postgres:14
        env:
          POSTGRES_USER: acupuntura
          POSTGRES_PASSWORD: acupuntura
          POSTGRES_DB: postgres
        ports:
          - "5432:5432"
        options: >-
          --health-cmd="pg_isready -U acupuntura"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=5

    env:
      POSTGRES_USER: acupuntura
      POSTGRES_PASSWORD: acupuntura
      POSTGRES_DB: postgres
      DATABASE_URL: postgres://acupuntura:acupuntura@postgres:5432/postgres

    steps:
      - name: Checkout do repositório
        uses: actions/checkout@v4

      - name: Configurar Python ${{ matrix.python-version }}
        uses: actions/setup-python@v4
        with:
          python-version: ${{ matrix.python-version }}

      - name: Instalar dependências do sistema
        run: sudo apt-get update && sudo apt-get install -y libpq-dev

      - name: Configurar cache de dependências
        uses: actions/cache@v3
        with:
          path: |
            ~/.cache/pip
            ~/.cache/pypoetry
          key: ${{ runner.os }}-pip-${{ hashFiles('**/poetry.lock') }}
          restore-keys: |
            ${{ runner.os }}-pip-

      - name: Instalar dependências com Poetry
        run: |
          pip install poetry
          poetry install --no-root

      - name: Aguardar PostgreSQL
        run: |
          until pg_isready -h postgres -p 5432; do
            echo "Aguardando PostgreSQL..."
            sleep 2
          done

      - name: Rodar migrações do Django
        run: poetry run python manage.py migrate

      - name: Rodar flake8
        run: poetry run flake8

      - name: Rodar testes com pytest
        run: poetry run pytest

      - name: Build artifact
        run: make my-app

      - name: Attest
        uses: actions/attest-build-provenance@v3
        with:
          subject-path: "${{ github.workspace }}/my-app"
