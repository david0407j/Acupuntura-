name: acupuntura

on:
  push:
    branches: ["sala"]
  pull_request:
    branches: ["sala"]

jobs:
  build:
    runs-on: ubuntu-latest

    services:
      postgres:
        image: postgres:14
        env:
          POSTGRES_USER: acupuntura
          POSTGRES_PASSWORD: acupuntura
          POSTGRES_DB: postgres
        ports:
          - "5432:5432"
        options: >-
          --health-cmd="pg_isready -U acupuntura"
          --health-interval=10s
          --health-timeout=5s
          --health-retries=5

    env:
      POSTGRES_USER: acupuntura
      POSTGRES_PASSWORD: acupuntura
      POSTGRES_DB: postgres
      DATABASE_URL: postgresql://acupuntura:acupuntura@postgres:5432/postgres

    steps:
      - name: Checkout do repositório
        uses: actions/checkout@v4

      - name: Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"

      - name: Instalar dependências do sistema
        run: sudo apt-get update && sudo apt-get install -y libpq-dev

      - name: Instalar Poetry
        run: pip install poetry

      - name: Instalar dependências
        run: poetry install --no-root

      - name: Aguardar PostgreSQL
        run: |
          until pg_isready -h postgres -p 5432 -U acupuntura; do
            echo "Aguardando PostgreSQL..."
            sleep 2
          done

      - name: Rodar migrações do Django
        run: poetry run python manage.py migrate

      - name: Rodar flake8
        run: poetry run flake8

      - name: Rodar testes com pytest
        run: poetry run pytest
